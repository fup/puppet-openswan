#
# This file is managed by Puppet
#
# /etc/ipsec.conf - Openswan IPsec configuration file
version 2.0

config setup
<% if @debug_level -%>
        plutodebug=<%= @debug_level.eql?('all') ? 'all' : "'#{@debug_level}'" %>
<% end -%>
<% if @plutoopts -%>
        plutoopts="<%= @plutoopts %>"
<% end -%>
        dumpdir="<%= @dumpdir %>"
        plutostderrlog="<%= @plutostderrlog %>"
        nat_traversal=<%= @nat_t %>
        virtual_private=<%= @virtual_private %>
        oe=<%= @opportunistic_encryption %>
        protostack=<%= @protostack %>

include /etc/ipsec.d/connections/*.conf
